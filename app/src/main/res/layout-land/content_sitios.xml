<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SitiosActivity"
    tools:showIn="@layout/app_bar_sitios">

    <fragment
        android:id="@+id/listaSitios"
        android:layout_weight="1"
        android:layout_width="0dp"
        tools:layout="@layout/fragment_sitos"
        android:name="com.example.worldskills.turisapp.fragments.SitosFragment"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/listaDetail"
        android:layout_width="0dp"
        android:layout_weight="2"
        tools:layout="@layout/fragment_details"
        android:name="com.example.worldskills.turisapp.adapters.DetailsFragment"
        android:layout_height="match_parent"/>

</LinearLayout>