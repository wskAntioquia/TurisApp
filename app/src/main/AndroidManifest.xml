<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.worldskills.turisapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InicioActivity"
            android:label="@string/title_activity_inicio"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SitiosActivity"
            android:label="@string/title_activity_sitios"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.HotelesActivity"
            android:label="@string/title_activity_hoteles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RestaurantesActivity"
            android:label="@string/title_activity_restaurantes"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>